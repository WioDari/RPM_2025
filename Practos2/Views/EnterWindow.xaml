<Window x:Class="Practos2.Views.EnterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practos2.Views"
        mc:Ignorable="d"
        Title="EnterWindow" Height="450" Width="350">
    <Grid
        Background="#EDE2FF">
        <TextBlock HorizontalAlignment="Center" Margin="0,38,0,0" TextWrapping="Wrap" Text="Вход" FontSize="35" VerticalAlignment="Top"/>
        <Button Content="Войти как гость" FontSize="25" Foreground="#1C1C1C" Background="#9C4DFF" HorizontalAlignment="Left" Margin="10,346,0,0" VerticalAlignment="Top" Height="84" Width="110" RenderTransformOrigin="0.495,0.531"/>
        <Button Command="{Binding LoginCommand}" Foreground="#1C1C1C" Content="Войти" FontSize="30" Background="#7A00CC" HorizontalAlignment="Left" Margin="233,346,0,0" VerticalAlignment="Top" Height="88" Width="107"/>
        <StackPanel Orientation="Horizontal" Margin="70,-5,59,264">
            <TextBlock Margin="20,122,0,0" TextWrapping="Wrap" FontSize="25" Text="Логин:" VerticalAlignment="Top" Height="26"/>
            <TextBox Text="{Binding login}" HorizontalAlignment="Left" Margin="0,122,0,0" FontSize="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="68,58,62,206" RenderTransformOrigin="0.5,0.5">
            <TextBlock Margin="20,122,0,0" TextWrapping="Wrap" FontSize="25" Text="Пароль:" VerticalAlignment="Top" Height="26"/>
            <TextBox Text="{Binding password}" HorizontalAlignment="Left" Margin="0,122,0,0" FontSize="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Practos2.Views.Warning_Image"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practos2.Views"
        mc:Ignorable="d"
        Title="Ошибка!" Height="250" Width="250">
    <Grid>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="182,203,0,0" VerticalAlignment="Top" RenderTransformOrigin="-10.108,-1.585" Width="58" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,147,0,0" TextWrapping="Wrap" Text="Логин или пароль введены неверно!" VerticalAlignment="Top"/>
        <MediaElement LoadedBehavior="Play" UnloadedBehavior="Manual" Name="Media" Margin="40,29,40,0" Height="85" VerticalAlignment="Top">
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="MediaElement.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <MediaTimeline Source="Resource/animation.gif.mp4" Storyboard.TargetName="myMediaElement" RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>
    </Grid>
</Window>

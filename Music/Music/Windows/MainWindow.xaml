<Window x:Class="Music.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music"
        xmlns:m="clr-namespace:Music.Models"
        mc:Ignorable="d"
        Title="Музыка+" Height="900" Width="1600" MinHeight="900" MinWidth="1600"
        d:DataContext="{d:DesignInstance Type=m:User, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen">

    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="105"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Background="{StaticResource PrimaryAccentColorBrush}" Grid.ColumnSpan="3"/>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Авторизация" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="55" Foreground="White"/>

        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock Text="Логин:" Margin="0,0,0,10"/>
            <TextBox Text="{Binding Login}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock Text="Пароль:" Margin="0,0,0,10"/>
            <TextBox Text="{Binding Password}"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10" Text="Код с картинки:"/>
            <Grid Grid.Column="1" Grid.Row="3" ShowGridLines="False" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Row="1" Name="CaptchaInputTextBox"  Margin="0,0,10,0"/>
                <Button
                    Padding="0"
                    Grid.Row="1" Grid.Column="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    Click="RefreshButton_Click">
                    <TextBlock Text="⟳" FontSize="50"/>
                </Button>
            </Grid>
        </StackPanel>
        <Border Grid.Row="4" Grid.Column="1" 
                Padding="0"
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                BorderBrush="{StaticResource PrimaryAccentColorBrush}"
                ClipToBounds="True"
                Margin="20">
            <Image Name="CaptchaImage" VerticalAlignment="Stretch" HorizontalAlignment="Center" ClipToBounds="True"/>
        </Border>

        <Grid Grid.Row="5" Grid.Column="1" ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button 
                Grid.Column="1" 
                Content="Войти" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Click="LoginButton_Click"/>

            <Button 
                Grid.Column="0" 
                Content="Выход" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Click="ExitButton_Click"
                Background="{StaticResource PrimaryAccentColorBrush}"
                BorderBrush="{StaticResource SecondaryAccentColorBrush}"/>
        </Grid>

    </Grid>
</Window>

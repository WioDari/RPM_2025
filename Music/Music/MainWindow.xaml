<Window Style="{StaticResource MainWindowStyle}"
        x:Class="Music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel  >
        <TextBlock Text="Test"/>
        <TextBlock Text="Кол-во песен: "/>
        <TextBlock Text="{Binding trackCount}"/>
        <TextBlock Text="Кол-во альбомов: "/>
        <TextBlock Text="{Binding albumCount}"/>
        <TextBlock Text="Кол-во плейлистов: "/>
        <TextBlock Text="{Binding playlistCount}"/>
    </StackPanel>
</Window>

<Application x:Class="Music.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Music"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Color x:Key="PrimaryBackgroundColor">#FFFFFF</Color>
        <Color x:Key="PrimaryAccentColor">#7A00CC</Color>
        <Color x:Key="SecondaryAccentColor">#9C4DFF</Color>
        <Color x:Key="SecondaryBackgroundColor">#EDE2FF</Color>
        <Color x:Key="PrimaryTextColor">#1C1C1C</Color>
        <Color x:Key="SecondaryTextColor">#4B4B4B</Color>
        <Color x:Key="ErrorColor">#CC3366</Color>
        <Color x:Key="SuccessColor">#5DCC99</Color>
        
        <SolidColorBrush x:Key="PrimaryBackgroundColorBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
        <SolidColorBrush x:Key="PirmaryAccentColorBrush" Color="{StaticResource PrimaryAccentColor}"/>
        <SolidColorBrush x:Key="SecondaryAccentColorBrush" Color="{StaticResource SecondaryAccentColor}"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColorBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
        <SolidColorBrush x:Key="PrimaryTextColorBrush" Color="{StaticResource PrimaryTextColor}"/>
        <SolidColorBrush x:Key="SecondaryTextColorBrush" Color="{StaticResource SecondaryTextColor}"/>
        <SolidColorBrush x:Key="ErrorColorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="SuccessColorBrush" Color="{StaticResource SuccessColor}"/>
        
        <Style TargetType="Window" x:Key="WindowStyle">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBackgroundColorBrush}"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColorBrush}"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="36"/>
        </Style>
    </Application.Resources>
</Application>

<Window x:Class="PracticeWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="413">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="62*"/>
                <RowDefinition Height="62*"/>
                <RowDefinition Height="62*"/>
                <RowDefinition Height="239*"/>
            </Grid.RowDefinitions>
            <Button HorizontalAlignment="Left" Margin="10,152,0,0" Grid.Row="3" VerticalAlignment="Top" Height="82" Width="183">
                <Border CornerRadius="8,8,8,8">
                    <TextBlock Text="Гостевой вход" FontSize="24"/>
                </Border>
            </Button>
            <Button HorizontalAlignment="Left" Margin="220,152,0,0" Grid.Row="3" VerticalAlignment="Top" Height="82" Width="183" Click="Button_Click">
                <Border CornerRadius="8,8,8,8">
                    <TextBlock Text="Войти" FontSize="24"/>
                </Border>
            </Button>
            <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"  Text="Вход" VerticalAlignment="Center" Height="67" Width="412" FontSize="48"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Логин" TextAlignment="Center" Width="87" FontSize="18"/>
                <TextBox Name="loginbox" TextWrapping="Wrap" Width="320" Height="39" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Пароль" TextAlignment="Center" Width="87" FontSize="18"/>
                <TextBox Name="passwordbox" TextWrapping="Wrap" Width="320" Height="39" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>

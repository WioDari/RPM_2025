<Application x:Class="SpotApp_wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SpotApp_wpf"
             StartupUri="/Views/Authorize.xaml"
             >
    <Application.Resources>
        <Style TargetType="Window" x:Key="window">
            <Setter Property="FontFamily" Value="Times New Roman"></Setter>
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="Icon" Value="/Resources/icon.ico"></Setter>
            <Setter Property="TextBlock.Foreground" Value="#1C1C1C"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#7A00CC"></Setter>
        </Style>
    </Application.Resources>
</Application>

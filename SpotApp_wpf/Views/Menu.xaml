<Window x:Class="SpotApp_wpf.Views.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotApp_wpf.Views"
        mc:Ignorable="d"
        Style="{StaticResource window}"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="{Binding name}" VerticalAlignment="Center" Width="190" Height="23" Grid.ColumnSpan="2"/>
        <Button Content="Выйти" Command="{Binding LogoutCommand}" HorizontalAlignment="Left" Margin="562,6,0,0" VerticalAlignment="Top" Height="23" Width="50" Grid.Column="1"/>
        <Button Content="Плэйлисты" HorizontalAlignment="Center" Margin="0,27,0,0" Grid.Row="1" VerticalAlignment="Top" Height="34" Width="110"/>
        <Button Content="Альбомы" HorizontalAlignment="Center" Margin="0,84,0,0" Grid.Row="1" VerticalAlignment="Top" Height="34" Width="110"/>

    </Grid>
</Window>

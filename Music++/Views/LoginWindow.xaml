<Window x:Class="Music__.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music__.Views"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="300" 
        Width="400" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman"
        Foreground="#1C1C1C">

    <Grid 
        ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>

        </Grid.ColumnDefinitions>



        <!--#region ШАПКА-->

        <Grid
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Grid.Row="0"
            Background="#EDE2FF">

            <TextBlock 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"  
                TextWrapping="Wrap" 
                Text="АВТОРИЗАЦИЯ" 
                Foreground="#1C1C1C"
                FontSize="16"
                FontWeight="SemiBold"  
            />
        </Grid>
        <!--#endregion-->



        <!--#region ВВОД ЛОГИНА И ПАРОЛЯ-->

        <!--#region ввод логина-->
        <TextBlock
                Text="Введите логин:"
                Grid.Row="1"
                Grid.ColumnSpan="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="14">
        </TextBlock>
        <TextBox 
                x:Name="LoginTB" 
                Style="{DynamicResource TextBoxStyleGeneral}"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                HorizontalAlignment="Center"  
                VerticalAlignment="Center" 
                TextWrapping="Wrap" 
                Text="{Binding login, UpdateSourceTrigger=PropertyChanged}" 
                Width="200"/>
        <!--#endregion-->

        <!--#region ввод пароля-->
        <TextBlock
                Text="Введите пароль:"
                Grid.Row="3"
                Grid.ColumnSpan="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="14">
        </TextBlock>
        <TextBox 
                x:Name="PasswordTB"
                Style="{DynamicResource TextBoxStyleGeneral}"
                Grid.ColumnSpan="4"
                Grid.Row="4"
                HorizontalAlignment="Center" 
                TextWrapping="Wrap" 
                Text="{Binding password, UpdateSourceTrigger=PropertyChanged}"
                Width="200"
                VerticalAlignment="Top"/>
        <!--#endregion-->

        <!--#endregion-->



        <!--#region КНОПКИ-->

        <!--показать пароль-->
        <Border
                Grid.Column="3"
                Grid.Row="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                BorderThickness="1.5"
                BorderBrush="#7A00CC"
                Background="#EDE2FF"
                CornerRadius="5"
                Width="25"
                Height="25"
                Margin="25,0,0,0">

            <Button 
                    x:Name="ShowPasswordB"
                
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="14"
                    Content="👀"
                    ToolTip="Показать пароль"
                    Cursor="Hand"
                    Focusable="False">
            </Button>
        </Border>

        <!--вход-->
        <Border
                Grid.Row="6"
                Grid.Column="1"
                BorderThickness="1.5"
                BorderBrush="#7A00CC"
                Background="#EDE2FF"
                CornerRadius="5"
                Width="75"
                Height="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,25,0">

            <Button 
                    x:Name="LoginB" 
                    Command="{Binding LoginCommand}"
                    Content="Войти"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Height="25"
                    Width="75"
                    FontSize="14" 
                    Cursor="Hand"
                    Focusable="False"/>
        </Border>

        <!--гостевой режим-->
        <Border
                    Grid.Row="6"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    BorderThickness="1.5"
                    BorderBrush="#7A00CC"
                    Background="#EDE2FF"
                    CornerRadius="5"
                    Width="125"
                    Height="25" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">

            <Button 
                        x:Name="GuestModeB"
                        Command="{Binding GuestModeCommand}"
                        Content="Гостевой режим"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand"
                        Focusable="False">
            </Button>
        </Border>

        <!--#endregion-->


    </Grid>
</Window>

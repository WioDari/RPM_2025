<Window x:Class="Music__.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music__.Views" xmlns:viewmodels="clr-namespace:Music__.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:AuthorizationViewModel}"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="425" 
        Width="425" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource GeneralStyle}">

    <Grid 
        ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>

        </Grid.ColumnDefinitions>



        <!--#region ШАПКА-->

        <Grid
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Grid.Row="0"
            Background="{DynamicResource SecondaryBackground}">

            <TextBlock 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"  
                Text="АВТОРИЗАЦИЯ" 
                FontSize="16"
                FontWeight="SemiBold"  
            />
        </Grid>
        <!--#endregion-->



        <!--#region ВВОД ЛОГИНА, ПАРОЛЯ И КАПЧИ-->

        <!--#region ввод логина-->
        <TextBlock
                Text="Введите логин:"
                Grid.Row="1"
                Grid.ColumnSpan="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="14">
        </TextBlock>
        <TextBox 
                x:Name="LoginTB" 
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                HorizontalAlignment="Center"  
                VerticalAlignment="Center" 
                TextWrapping="Wrap" 
                Text="{Binding login, UpdateSourceTrigger=PropertyChanged}" 
                Width="200"/>
        <!--#endregion-->

        <!--#region ввод пароля-->
        <TextBlock
                Text="Введите пароль:"
                Grid.Row="3"
                Grid.ColumnSpan="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="14">
        </TextBlock>
        <TextBox 
                x:Name="PasswordTB"
                Grid.ColumnSpan="4"
                Grid.Row="4"
                HorizontalAlignment="Center" 
                TextWrapping="Wrap" 
                Text="{Binding password, UpdateSourceTrigger=PropertyChanged}"
                Width="200"
                VerticalAlignment="Top"/>

        <!--Converter={StaticResource PasswordVisibilityConverter}, ConverterParameter=IsChecked-->
        <!--#endregion-->
        
        <!--#region ввод капчи-->
        <TextBlock
            Text="Введите капчу:"
            Grid.Row="9"
            Grid.ColumnSpan="4"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="14">
        </TextBlock>
        <TextBox 
            x:Name="CaptchaTB"
            Text="{Binding captchainput, UpdateSourceTrigger=PropertyChanged}"
            Grid.Row="10"
            Grid.ColumnSpan="4"
            HorizontalAlignment="Center"
            Width="200">
        </TextBox>
        <!--#endregion-->

        <!--#endregion-->



        <!--#region ПОКАЗ/СКРЫТИЕ ПАРОЛЯ-->
        <StackPanel
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="5"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <TextBlock
                Text="Показывать пароль">
            </TextBlock>
            
            <CheckBox 
                x:Name="ShowPasswordCB"
                IsChecked="{Binding IsChecked}"
                Margin="10,0,0,0"
                BorderBrush="{DynamicResource MainAccent}">
            </CheckBox>
        </StackPanel>
        <!--#endregion-->
        
        
        
        <!--#region КАПЧА-->
        <TextBlock
            Text="{Binding captchatext}"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="6"
            FontSize="16"
            Visibility="Hidden">
        </TextBlock>
        <Image
            Source="{Binding captchaimage}"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="6"
            Grid.RowSpan="2">
        </Image>
        <!--#endregion-->



        <!--#region КНОПКИ-->

        <!--#region войти-->
        <Button 
            x:Name="LoginB"
            Grid.Row="12"
            Grid.Column="1"
            Command="{Binding LoginCommand}"
            IsDefault="True"
            Content="Войти"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,25,0"
            Height="25"
            Width="75"
            Focusable="False"/>
        <!--#endregion-->

        <!--#region гостевой режим-->
        <Button 
            Grid.Row="12"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Height="25"
            x:Name="GuestModeB"
            Command="{Binding GuestModeCommand}"
            Content="Гостевой режим"
            FontSize="14"
            Focusable="False">
        </Button>
        <!--#endregion-->
        
        <!--#endregion-->


    </Grid>
</Window>

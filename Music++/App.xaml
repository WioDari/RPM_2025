<Application x:Class="Music__.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Music__"
             StartupUri="/Views/LoginWindow.xaml">

    <Application.Resources>

        <Style
            x:Key="GeneralStyle"
            TargetType="Window">
            <Setter
                Property="FontFamily"
                Value="Times New Roman"></Setter>
            <Setter
                Property="Background"
                Value="#FFFFFF"></Setter>
            <Setter
                Property="Icon"
                Value="/Resources/icon.ico"></Setter>

        </Style>



        <Style
            x:Key="TextBoxStyleGeneral"
            TargetType="{x:Type TextBox}">

            <!--#region -->
            <Setter
                Property="Background"
                Value="#EDE2FF">
            </Setter>
            <Setter
                Property="BorderBrush"
                Value="#9C4DFF">
            </Setter>
            <Setter
                Property="BorderThickness"
                Value="1.5">
            </Setter>
            <Setter
                Property="FontSize"
                Value="14">
            </Setter>
            <Setter
                Property="Foreground"
                Value="#1C1C1C">
            </Setter>
            <Setter
                Property="HorizontalContentAlignment"
                Value="Left">
            </Setter>
            <Setter
                Property="KeyboardNavigation.TabNavigation"
                Value="None"></Setter>
            <Setter
                Property="FocusVisualStyle"
                Value="{x:Null}"></Setter>
            <Setter
                Property="AllowDrop"
                Value="True"></Setter>
            <Setter
                Property="ScrollViewer.PanningMode"
                Value="VerticalFirst"></Setter>
            <Setter
                Property="Stylus.IsFlicksEnabled"
                Value="False"></Setter>
            <!--#endregion-->

            <Setter
                Property="Template">
                <Setter.Value>
                    <ControlTemplate
                        TargetType="{x:Type TextBox}">

                        <Border
                            x:Name="Border"
                            CornerRadius="5"
                            Background="#EDE2FF"
                            BorderBrush="#7A00CC"
                            BorderThickness="1.5"
                            SnapsToDevicePixels="True"
                            Height="25">

                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Focusable="False"
                                HorizontalScrollBarVisibility="Hidden">
                            </ScrollViewer>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger
                                Property="IsEnabled"
                                Value="False">

                                <Setter
                                    Property="Opacity"
                                    TargetName="Border"
                                    Value="0.6"></Setter>
                            </Trigger>
                            <Trigger
                                Property="IsMouseOver"
                                Value="True">

                                <Setter
                                    Property="BorderBrush"
                                    TargetName="Border"
                                    Value="#9C4DFF"></Setter>
                            </Trigger>
                            <Trigger
                                Property="IsKeyboardFocused"
                                Value="True">
                                <Setter
                                    Property="BorderBrush"
                                    TargetName="Border"
                                    Value="#9C4DFF"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>

<Window x:Class="Spotify_wpf.Views.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotify_wpf.Views"
        mc:Ignorable="d"
        Style="{StaticResource Window}"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="303*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="187*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="374" VerticalAlignment="Center" Width="194" Background="#FFEDE2FF" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding name}" VerticalAlignment="Center" Height="28" Width="146"/>
        <Button Content="Выйти" HorizontalAlignment="Center" Margin="0,318,0,0" Grid.Row="1" VerticalAlignment="Top" Height="22" Width="126" Background="#FF7A00CC" Command="{Binding LogoutCommand}"/>
        <Button Content="Альбомы" HorizontalAlignment="Center" Margin="0,29,0,0" Grid.Row="1" VerticalAlignment="Top" Height="22" Width="126" Background="#FF7A00CC"/>
        <Button Content="Плейлисты" HorizontalAlignment="Center" Margin="0,56,0,0" Grid.Row="1" VerticalAlignment="Top" Height="22" Width="126" Background="#FF7A00CC"/>


    </Grid>
</Window>

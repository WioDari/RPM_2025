<Window x:Class="Musick.Views.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musick.Views"
        mc:Ignorable="d"
        Style="{StaticResource GeneralStyle}"
        Title="Auth" Height="483" Width="481">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="87*"/>
        </Grid.RowDefinitions>
        <Rectangle Stroke="#FFEDE2FF" Margin="0,0,0,178" Fill="#FFEDE2FF"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="48" Height="55" Width="273"/>

        <TextBlock HorizontalAlignment="Left" Margin="54,94,0,0" TextWrapping="Wrap" Text="Логин:" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16" Height="18" Width="46"/>
        <TextBlock HorizontalAlignment="Left" Margin="53,150,0,0" TextWrapping="Wrap" Text="Пароль:" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16" Height="18" Width="54"/>

        <TextBox Style="{DynamicResource TextBoxStyleGeneral}" HorizontalAlignment="Center" Margin="0,125,0,0" TextWrapping="Wrap" Text="{Binding login}" VerticalAlignment="Top" Width="374" FontSize="16" Height="20"/>
        <TextBox Style="{DynamicResource TextBoxStyleGeneral}" HorizontalAlignment="Center" Margin="0,178,0,0" TextWrapping="Wrap" Text="{Binding password}" VerticalAlignment="Top" Width="376" FontSize="16" Height="20"/>

        <Button Style="{DynamicResource ButtonStyleGeneral}" Command="{Binding LoginCommand}" Content="Войти" HorizontalAlignment="Left" Margin="285,0,0,0" VerticalAlignment="Center" Height="30" Width="143" Background="#FF7A00CC" FontFamily="Times New Roman" FontSize="16" Grid.Row="2"/>

        <Button Style="{DynamicResource ButtonStyleGeneral}" Command="{Binding GuestCommand}" Content=" Гостевой режим" HorizontalAlignment="Left" Margin="53,0,0,0" VerticalAlignment="Center" Height="30" Width="143" Background="#FF9C4DFF" FontFamily="Times New Roman" FontSize="16" Grid.Row="2"/>



        <TextBox HorizontalAlignment="Left" Margin="157,65,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding captchaInput, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="196,46,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding captchaText}" VerticalAlignment="Top"/>
        <Button Command="{Binding UpdateCaptchaCommand}" Content="Обновить" HorizontalAlignment="Left" Margin="190,102,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Image Source="{Binding captchaImage}" HorizontalAlignment="Left" Height="50" Margin="124,10,0,0" VerticalAlignment="Top" Width="200" Grid.Row="1"/>

    </Grid>
</Window>

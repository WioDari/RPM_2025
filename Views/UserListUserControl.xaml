<UserControl x:Class="Spotify_wpf.Views.UserListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotify_wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1,1,1,1">
            <TextBlock TextWrapping="Wrap" Text="{}" Foreground="{x:Null}" Margin="0,0,189,0"/>

        </Border>
        <StackPanel Margin="10,10,10,10">
            <TextBlock TextWrapping="Wrap" Text="{Binding loginuser}" FontFamily="Times New Roman" FontWeight="Bold" FontSize="20"/>
            <Border BorderThickness="1" BorderBrush="Black" Height="1"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding email}" FontFamily="Times New Roman" FontSize="16"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding role}" FontFamily="Times New Roman" FontSize="16"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding statussub}" FontFamily="Times New Roman" FontSize="16"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding datareg}" FontFamily="Times New Roman" FontSize="16"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding lastenter}" FontFamily="Times New Roman" FontSize="16"/>

        </StackPanel>
        <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" FontWeight="Bold" FontFamily="Times New Roman" FontSize="20" Text="{Binding time}" VerticalAlignment="Bottom" Height="60" Width="104"/>
   

    </Grid>
</UserControl>

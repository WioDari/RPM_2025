<UserControl x:Class="SpotApp_wpf.Views.PlayListTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpotApp_wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid Background="White"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding title}" VerticalAlignment="Center" Height="40" Width="780" FontSize="30" Grid.ColumnSpan="2" Margin="10,0,0,0"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="{Binding likes, StringFormat= Нравится: {0}}" VerticalAlignment="Top" Height="37" Width="580" FontSize="20"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="{Binding subs, StringFormat= Подписчиков: {0}}" VerticalAlignment="Top" Height="37" Width="580" FontSize="20" Margin="0,38,0,0"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="{Binding tracksCount, StringFormat= Треков: {0}}" VerticalAlignment="Top" Height="37" Width="580" FontSize="20" Margin="0,75,0,0"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="{Binding creationDate, StringFormat= Создан: {0}}" VerticalAlignment="Top" Height="37" Width="580" FontSize="20" Margin="0,112,0,0"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="{Binding time}" VerticalAlignment="Center" Height="38" Width="113" FontSize="25" TextAlignment="Center"/>

    </Grid>
</UserControl>

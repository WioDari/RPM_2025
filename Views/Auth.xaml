<Window x:Class="Spotify_wpf.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotify_wpf"
        mc:Ignorable="d"
        Style="{StaticResource Window}"
        Title="Auth" Height="550" Width="550">
    <Grid Height="534" VerticalAlignment="Top">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="204" Margin="0,91,0,0" VerticalAlignment="Top" Width="378" Background="#FFEDE2FF">

        </Border>
        <TextBox  Text="{Binding login}" ToolTip="Логин" HorizontalAlignment="Center" Margin="0,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" Height="36" BorderBrush="#FF7A00CC"/>
        <TextBox Text="{Binding password}" ToolTip="Пароль" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" Height="36" BorderBrush="#FF7A00CC" Margin="0,198,0,0"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,103,0,0" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="Auth_Button" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="164" Command="{Binding AuthCommand}" Background="#FF7A00CC"/>
        <TextBox HorizontalAlignment="Center" Margin="0,396,0,0" TextWrapping="Wrap" Text="{Binding captchaInput}" VerticalAlignment="Top" Width="164" TextChanged="TextBox_TextChanged" RenderTransformOrigin="0.553,-4.004" Height="27"/>
        <TextBlock TextWrapping="Wrap" Text="{Binding captchaText}" Margin="149,305,137,202"/>
        <Button Content="Обновить" Command="{Binding UpdateCaptchaCommand}" HorizontalAlignment="Center" Margin="0,428,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.347,-1.925"/>
        <Image Source="{Binding captchaImage}" HorizontalAlignment="Left" Height="46" Margin="177,332,0,0" VerticalAlignment="Top" Width="186" RenderTransformOrigin="0.638,0.418"/>

    </Grid>
</Window>

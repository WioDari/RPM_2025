<Window x:Class="MusicWpf.Views.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicWpf.Views"
        mc:Ignorable="d"
        Style="{StaticResource GlobalWindowStyle}"
        Title="Auth" Height="450" Width="400">
    <Grid Background="#FF9C4DFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="378" Margin="24,32,0,0" VerticalAlignment="Top" Width="352" Background="White" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="138,83,0,0" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Top" FontSize="22" Grid.ColumnSpan="2" Height="25" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="96,139,0,0" TextWrapping="Wrap" Text="{Binding login}" VerticalAlignment="Top" Width="204" Height="30" Grid.ColumnSpan="2"  />
        <TextBox HorizontalAlignment="Left" Margin="98,188,0,0" TextWrapping="Wrap" Text="{Binding password}" VerticalAlignment="Top" Width="204" Height="30" Grid.ColumnSpan="2"/>
        <Button Content="Режим гостя" HorizontalAlignment="Left" Margin="64,340,0,0" VerticalAlignment="Top" Height="32" Width="112" Background="#EDE2FF" Command="{Binding OpenGuestCommand}"/>
        <Button Content="Вход" HorizontalAlignment="Left" Margin="19,340,0,0" VerticalAlignment="Top" Height="32" Width="114" Background="#9C4DFF" Command="{Binding LoginCommand}" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="120,299,0,0" TextWrapping="Wrap" Text="{Binding CapchaK}" VerticalAlignment="Top" Width="162" Height="24" Grid.ColumnSpan="2"  />
        <Button Content="Обновить" Command="{Binding UpdateCapchaCommand}"  HorizontalAlignment="Left" Margin="87,299,0,0" VerticalAlignment="Top"  Height="24" Width="56" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="138,253,0,0" TextWrapping="Wrap" Text="{Binding Capcha}" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="120" Height="30"/>
        <Image Source="{Binding CapchaImage}" HorizontalAlignment="Left" Height="35" Margin="138,253,0,0" VerticalAlignment="Top" Width="140" Grid.ColumnSpan="2"/>


    </Grid>
</Window>

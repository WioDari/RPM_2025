<Window x:Class="SpotApp_wpf.Views.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotApp_wpf.Views"
        xmlns:p="clr-namespace:SpotApp_wpf.Properties"
        mc:Ignorable="d"
        Style="{StaticResource window}"
        Title="Menu" Height="450" Width="800">
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Border Background="#EDE2FF" BorderThickness="1" Grid.ColumnSpan="8"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding name}" VerticalAlignment="Center" Width="100" Height="44"/>
        <Button Content="Выйти" Command="{Binding LogoutCommand}" HorizontalAlignment="Right" Margin="37,0,0,0" VerticalAlignment="Top" Height="31" Width="63" Grid.Column="7"/>
        <Button Content="Альбомы" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Height="34" Width="80" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{x:Static p:Resources.Tittle}" VerticalAlignment="Center" Width="84" Grid.Column="1"/>
        <Button Content="Артисты" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Height="34" Width="80" Grid.Column="3"/>
        <Button Content="Плэйлисты" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Height="34" Width="80" Grid.Column="4"/>
        <Button Content="Пользователи" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Height="34" Width="80" Grid.Column="5"/>
        <Frame Content="{Binding page}" Grid.Row="1" Grid.ColumnSpan="8" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>

<Window x:Class="MusicWpf.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicWpf.Views"
        mc:Ignorable="d"
        Style="{StaticResource GlobalWindowStyle}"
        Title="MenuWindow" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="77*"/>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="157*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" Background="#FF7A00CC"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="474,23,0,0" TextWrapping="Wrap" Text="{Binding name}" VerticalAlignment="Top" Height="30" Width="206"/>
        <Button Content="Альбомы" HorizontalAlignment="Center" Margin="0,26,0,0" Grid.Row="1" VerticalAlignment="Top" Height="45" Width="160" Background="#FF9C4DFF"/>
        <Button Content="Плейлисты" HorizontalAlignment="Center" Margin="0,92,0,0" Grid.Row="1" VerticalAlignment="Top" Height="45" Width="160" Background="#FF9C4DFF"/>
        <Button Content="Треки" HorizontalAlignment="Center" Margin="0,160,0,0" Grid.Row="1" VerticalAlignment="Top" Height="45" Width="160" Background="#FF9C4DFF"/>
        <Button Content="Выход" HorizontalAlignment="Center" Margin="0,421,0,0" Grid.Row="1" VerticalAlignment="Top" Height="45" Width="160"  Background="#FF9C4DFF" Command="{Binding Exit}"/>



    </Grid>
</Window>

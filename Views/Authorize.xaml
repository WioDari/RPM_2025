<Window x:Class="SpotApp_wpf.Views.Authorize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotApp_wpf.Views"
        mc:Ignorable="d"
        Style="{StaticResource window}"
        Title="Authorize" Height="400" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#EDE2FF" CornerRadius="20" BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="4" Margin="0,0,0,10" Grid.RowSpan="3" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="143,0,0,0" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Center" Grid.Column="1" Height="40" Width="180" FontSize="30" Grid.ColumnSpan="3"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Center" FontSize="22" Height="25" Width="57"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Center" FontSize="22" Height="26" Width="69"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="{Binding login}" VerticalAlignment="Center" Width="200" FontSize="22" Height="27"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="{Binding password, Converter={StaticResource CheckBoxChangeVisibilityConverter}, ConverterParameter=isChecked}" VerticalAlignment="Center" Width="200" FontSize="22" Height="28"/>
        <Button Background="#9C4DFF" Content="Гостевой Режим" HorizontalAlignment="Left" Margin="17,10,0,0" Grid.Row="4" VerticalAlignment="Top" Height="44" Width="90" Command="{Binding OpenGuestCommand}"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Top" Height="44" Width="90" Grid.Column="1" Command="{Binding LoginCommand}"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="{Binding capchaInput}" VerticalAlignment="Center" Width="188" FontSize="22" Height="28"/>
        <Button Command="{Binding UpdateCapchaCommand}" Content="Обновить" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Height="44" Width="90" Grid.Column="3" Margin="0,10,0,0"/>
        <TextBlock Grid.Column="3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding capchaText}" VerticalAlignment="Top" FontSize="10" Width="120" Margin="0,57,0,0" Height="11"/>
        <Image Source="{Binding capchaImage}" Grid.Column="3" HorizontalAlignment="Center" Height="50" Margin="23,18,0,0" VerticalAlignment="Center" Width="200" Grid.Row="1"/>
        <CheckBox IsChecked="{Binding isChecked}" Grid.Column="2" Content="" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Margin="10,0,0,0" Height="14" Width="16">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"/>
            </CheckBox.LayoutTransform>
        </CheckBox>


    </Grid>
</Window>

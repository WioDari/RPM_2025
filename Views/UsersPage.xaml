<Page x:Class="SpotApp_wpf.Views.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpotApp_wpf.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" Height="auto" Width="133" Grid.Column="0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Center"/>
        <TextBlock TextAlignment="Center" Height="auto" Width="133" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="email" VerticalAlignment="Center"/>
        <TextBlock TextAlignment="Center" Height="auto" Width="133" Margin="10" Grid.Column="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Роль" VerticalAlignment="Center"/>
        <TextBlock TextAlignment="Center" Height="auto" Width="133" Margin="10" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Подписка" VerticalAlignment="Center"/>
        <TextBlock TextAlignment="Center" Height="auto" Width="133" Margin="10" Grid.Column="4" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Дата регистрации" VerticalAlignment="Center"/>
        <TextBlock TextAlignment="Center" Height="auto" Width="133" Margin="10" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Последний вход" VerticalAlignment="Center"/>

        <ListBox ItemsSource="{Binding userTmps}" Grid.Row="1"  Grid.ColumnSpan="6" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:UserTemplate/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Border BorderBrush="Black" BorderThickness="0,0,1,0"/>
        <Border BorderBrush="Black" Grid.Column="1" BorderThickness="0,0,1,0"/>
        <Border BorderBrush="Black" Grid.Column="2" BorderThickness="0,0,1,0"/>
        <Border BorderBrush="Black" Grid.Column="3" BorderThickness="0,0,1,0"/>
        <Border BorderBrush="Black" Grid.Column="4" BorderThickness="0,0,1,0"/>
    </Grid>
</Page>
